<table class="table">
 	<div class="panel panel-default">

    <div class="panel-heading"><h4><%= t(:name) %><%= @decks.name %></h4>
   		<tr>
        <td><b><%= t(:name) %></td>
   	 		<td><b><%= t(:original_text) %></td>
   	 		<td><b><%= t(:translated_text) %></td>
   	 		<td><b><%= t(:review_date) %></td>
        <td></td>
        <td></td>
        <td></td>
    	</tr>
		</div>
      <tr>
        <td><%= @decks.name %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
        <% @decks.cards.each do |cards| %>
          <tr>
            <td></td>
            <td><%= cards.original_text %></td>
            <td><%= cards.translated_text %></td>
            <td><%= cards.review_date.strftime("%d.%m.%Y") %></td>
            <td><%= link_to t(:show), dashboard_card_path(cards) %></td>
            <td><%= link_to t(:edit), edit_dashboard_card_path(cards) %></td>
            <td><%= link_to t(:delete), dashboard_card_path(cards),
                    method: :delete,
                    data: { confirm: 'Вы уверены, что хотите удалить?' } %></td>

          </tr>
        <% end %>

	</div>
</table>
