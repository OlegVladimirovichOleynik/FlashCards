<table class="table">
 	<div class="panel panel-default">

  	<div class="panel-heading"><h4><%= t(:all_decks) %></h4>
   		<tr>
   	 		<td><b><%= t(:name) %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    	</tr>
      <tr></tr>
		</div>
  	<% @decks.each do |decks| %>
  	  <tr>
        <td><%= decks.name %></td>
        <% if current_user.current_deck_id == decks.id %>
  	    <td> <span class="label label-info"><%= t(:current_deck)%></span></td>
        <td></td>
        <% else %>
        <td></td>
        <td><%= link_to t(:make_current), current_deck_user_path(decks), method: :put  %></td>
        <% end %>
        <td><%= link_to t(:show), deck_path(decks) %></td>
        <td><%= link_to t(:edit), edit_deck_path(decks) %></td>
        <td><%= link_to t(:delete), deck_path(decks),
                method: :delete,
                data: { confirm: 'Вы уверены, что хотите удалить?' } %></td>
  	  </tr>
 		<% end %>
	</div>
</table>
