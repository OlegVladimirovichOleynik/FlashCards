<!DOCTYPE html>
<html>
  <head>
    <title>Флэшкарточкер</title>
    <link rel="stylesheet" href="application.css">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header class="clearfix">
  <nav>
    <ul class="navigation-links nav nav-tabs " role="tablist">
    	<li  class="active"><h4><%= link_to "Флэшкарточкер", root_path %></h4></li>

      <% if current_user %>
        <li><h4><%= link_to "Все карточки", cards_path %></h4></li>
        <li><h4><%= link_to "Добавить карточку", new_card_path %></h4></li>
        <li><h4><%= link_to "Выйти", logout_path %></h4></li>
        <li><h4>Вы вошли как: <%= link_to current_user.email, user_path(current_user) %></h4></li>

      <% else %>
        <li><h4><%= link_to "Регистрация", new_user_path %></h4></li>
        <li><h4><%= link_to "Войти", new_session_path %></h4></li>
      <% end %>
    </ul>
  </nav>
  </header>
  <div class="container">
    <%= yield %>
  </div>



</body>

</html>
